<html>
<div class="card text-center mb-3">
  <div class="card-body">
  <body>


    <div class="container">
      <h1> Editer le potin : </h1>
      <%= form_tag url_for(action: 'update'), method: "patch" do %>
        <input type="hidden" name="authenticity_token" value= <%= form_authenticity_token %> >
        <br />
        <div class="row justify-content-center align-self-center mx-5">
          <div class="col-3 text-center font-weight-bold">
          <%= label_tag 'Titre du potin : ' %>
          </div>
          <div class="col-3">
          <%= text_field_tag 'title', @gossip.title, options = {style:"height:30px;width:300px"} %>
          </div>
        </div>     
        <br />

        <div class="row justify-content-center align-self-center mx-5">
          <div class="col-3 text-center font-weight-bold">
            <%= label_tag 'Nouveau potin : ' %>
          </div>
          <div class="col-3">
            <%= text_field_tag 'content', @gossip.content, options = {style:"height:120px;width:300px;vertical-align:text-top"}%>
          </div>
        </div>
        <br />
        <%= submit_tag "Valider", class: 'btn btn-info btn-lg btn-submit'  %>
      <% end %>

    </div>
  </body>
</div>
  </div>
</html>